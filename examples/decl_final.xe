import "array"

// Declarative approach
print("1. Declarative Style")
print()

fn sum(arr) {
    var total = 0
    var j = 0
    while (j < array.len(arr)) {
        const val = array.get(arr, j)
        total = total + val
        j = j + 1
    }
    return total
}

const nums = array.of(1, 2, 3, 4, 5)
const result = sum(nums)

print("Sum:")
print(result)
print()

