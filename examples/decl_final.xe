// Declarative Rules
print("3. Validation Rules")

fn isValid(age) {
    if (age < 0) {
        return false
    }
    if (age > 150) {
        return false
    }
    return true
}

print(isValid(30))
print(isValid(-5))
print()

print("Declarative = What, not How")
