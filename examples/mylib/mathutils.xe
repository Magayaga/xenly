# ─── mathutils ── exported utility functions ──────────────────
import "math"

export fn clamp(val, lo, hi) {
    if (val < lo) { return lo }
    if (val > hi) { return hi }
    return val
}

export fn lerp(a, b, t) {
    return a + (b - a) * t
}

export fn sign(n) {
    if (n > 0) { return 1 }
    if (n < 0) { return -1 }
    return 0
}

export fn distance(x1, y1, x2, y2) {
    var dx = x2 - x1
    var dy = y2 - y1
    return math.sqrt(dx * dx + dy * dy)
}
